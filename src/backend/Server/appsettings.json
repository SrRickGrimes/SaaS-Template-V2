{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "Serilog": {
        "MinimumLevel": {
            "Default": "Information"
        },
        "WriteTo": [
            {
                "Name": "Console"
            },
            {
                "Name": "File",
                "Args": {
                    "path": "log.log",
                    "rollingInterval": "Day"
                }
            },
            {
                "Name": "OpenTelemetry"
            }
        ]
    },
    "AllowedHosts": "*"
}
